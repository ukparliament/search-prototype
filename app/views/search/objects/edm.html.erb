<%#= render 'search/fragments/data', data: object.content_object_data %>

<% content_for(:before_title) do %>
  <%= link_to('UK Parliament') %> / <%= link_to('Open data') %><br/>
  <%= link_to('< Back to search results') %>
  <div id="top"></div>
<% end %>

<% if object.page_title %>
  <% content_for(:title) do %>
    <%= object.page_title %>
  <% end %>
<% end %>

<section id="prelim">
  <%= render 'search/fragments/edm_prelim', object: object %>
</section>

<section id="text" class="content-section">
  <div class="about-item">
    <%= object.motion_text %>
  </div>
</section>

<section id="about" class="content-section grey">
  <h2 class="content-heading">About this early day motion</h2>

  <div class="about-item">
    <h3 class="content-heading">Reference</h3>
    <%= object.reference %>
  </div>

  <div class="about-item">
    <h3 class="content-heading">Session</h3>
    <%= object.session %>
  </div>

  <%= render 'search/fragments/other_supporters', supporters: object.other_supporters unless object.other_supporters.blank? %>

  <div class="about-item">
    <h3 class="content-heading">Registered interest declared</h3>
    <%= object.registered_interest_declared %>
  </div>

  <%= render 'search/fragments/amendments', title: object.page_title, amendments: object.amendments unless object.amendments.blank? %>
  <%= render 'search/fragments/related_items' %>
  <%= render 'search/fragments/pills',  pills_heading: 'Subjects', pills: object.subjects unless object.subjects.blank? %>
  <%= render 'search/fragments/legislation', legislation: object.legislation unless object.legislation.blank? %>
  <%= render 'search/fragments/links', object: object %>

</section>

<%= render '/search/fragments/back_to_top_button' %>
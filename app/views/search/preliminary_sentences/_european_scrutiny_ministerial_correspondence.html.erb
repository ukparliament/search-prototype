<div class="content-prelim-box">
  <div class="content-prelim-inner">
    <div class="content-prelim-text" id="prelim-text">
      <%= object_display_name_link(object.object_name) %>
      <strong><%= format_date(object.date_originated) %></strong>,
      <% unless object.corresponding_minister.blank? %>
        from <%= search_link(object.corresponding_minister) -%>,
      <% end %>
      <% unless object.department.blank? %>
        on behalf of the <%= search_link(object.department&.first) -%>
      <% end %>
      <% unless object.regarding_link.blank? %>
        , regarding <%= link_to(object.regarding_title, object_show_url(object: object.regarding_link[:value])) %>
      <% end %>.
    </div>
  </div>
</div>